<h1>Listing surveys</h1>

<table>
  <tr>
    <th>Survey</th>
    <th>Course</th>
    <th>Section</th>
    <th>Instructor</th>
    <th>Question 1</th>
    <th>Response</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.survey_id %></td>
    <td><%= survey.course_id %></td>
    <td><%= survey.section %></td>
    <td><%= survey.instructor_id %></td>
    <td><%= survey.question_1 %></td>
    <td><%= survey.response %></td>
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

