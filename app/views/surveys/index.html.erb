<h1>Smart-Bubble surveys</h1>

<table>
  <tr>
    <th>Survey</th>
    <th>Course</th>
    <th>Section</th>
    <th>Instructor</th>    
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.survey_id %></td>
    <td><%= survey.course_id %></td>
    <td><%= survey.section_id %></td>
    <td><%= survey.instructor_id %></td>    
    <td><%= link_to 'Show', survey %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
    <td><%= link_to 'Delete', survey, method: :delete, data: { confirm: 'Are you sure you want to delete this survey?' } %></td>
  </tr>
<% end %>
</table>

